<!DOCTYPE html>
<html lang="en">
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag :application %>
  <%= javascript_include_tag :application %>
  <%= csrf_meta_tag %>

  <meta name="viewport" content="initial-scale=1.0; minimum-scale=1.0">
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="#">Andrew Mitchell</a>

        <%
          render_tabnav :class => "nav" do |n|
            n.add_tab do |t|
              t.named "Categories"
              t.links_to admin_categories_path
              t.highlights_on :controller => :categories
            end
            n.add_tab do |t|
              t.named "Posts"
              t.links_to admin_posts_path
              t.highlights_on :controller => :posts
            end
            n.add_tab do |t|
              t.named "Educational Qualifications"
              t.links_to admin_educational_qualifications_path
              t.highlights_on :controller => :educational_qualifications
            end
            n.add_tab do |t|
              t.named "Employment History"
              t.links_to admin_employment_history_items_path
              t.highlights_on :controller => :employment_history_items
            end
          end
        %>

        <% if user_signed_in? %>
            <ul class="nav pull-right">
              <li><%= link_to "Welcome #{current_user.username}", edit_user_path(current_user) %></li>
              <li><%= link_to "Logout", destroy_user_session_path %></li>
            </ul>
        <% else %>
          <ul class="nav pull-right">
            <li><%= link_to "Register", new_user_registration_path %></li>
            <li><%= link_to "Login", new_user_session_path %></p></li>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%= render :partial => 'shared/flash_messages' %>

  <div class="container-fluid">
    <%= yield %>
  </div>

  <footer class="navbar navbar-fixed-bottom">
    <div class="navbar-inner">
      <div class="container">
        <p>All content Â© Andrew Mitchell 2011<p>
        <a href="mailto:themitchell@me.com">themitchell@me.com</a>
      </div>
    </div>
  </footer>
</body>
</html>
