<!DOCTYPE html>
<html lang="en">
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag :application, :media => 'all' %>
  <%= javascript_include_tag :application %>
  <%= csrf_meta_tag %>

  <meta name="viewport" content="initial-scale=1.0; minimum-scale=1.0">
</head>
<body>
  <header>
    <div class="container">
        <h1>TheMitchell</h1>
    </div>
  </header>

  <nav id="main">
    <%
      render_tabnav :class => "container" do |n|
        n.add_tab do |t|
          t.named "Blog"
          t.links_to posts_path
          t.highlights_on :controller => :blog
        end
        n.add_tab do |t|
          t.named "About"
          t.links_to about_path
          t.highlights_on :controller => :static_pages, :action => :about
        end
        n.add_tab do |t|
          t.named "Photo Albums"
          t.links_to photoalbums_path
          t.highlights_on :controller => :photoalbums
        end
        n.add_tab do |t|
          t.named "Portfolio"
          t.links_to portfolio_path
          t.highlights_on :controller => :portfolio
        end
      end
    %>
  </nav>
