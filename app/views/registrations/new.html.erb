<%= link_to "Back", :back, :class => 'back_link' %>
<%= header('Register') %>

<%= render :partial => 'shared/available_oauth_providers', :locals => { :verb => "register" } %>

<%= form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-vertical" } do |f| %>
  <%= devise_error_messages! %>

	<%= f.label :username, "Username:" %>
  <%= f.text_field :username %>

  <% if @user.password_required? %>
			<%= f.label :password, "Password:" %>
      <%= f.password_field :password %>

			<%= f.label :password_confirmation, "Password Confirmation:" %>
      <%= f.password_field :password_confirmation %>

      <h3>Optional Fields<h3>

      <%= f.label :avatar, 'Avatar:' %>
      <%= f.file_field :avatar %>

			<%= f.label :email, "Email:" %>
      <%= f.text_field :email %>

			<%= f.label :first_name, "First Name:" %>
      <%= f.password_field :first_name %>

			<%= f.label :last_name, "Last Name:" %>
      <%= f.password_field :last_name %>

			<%= f.label :dob, "Date of Birth:" %>
      <%= f.password_field :dob %>

			<%= f.label :website_url, "Website Url:" %>
      <%= f.password_field :website_url %>
	<% end %>

	<%= f.submit "Save" %>

<% end %>

<%= render :partial => "devise/shared/links" %>
