<div id="posts_page">
	<div class="title_block clearfix">
		<h2>Blog</h2>
	</div>
	<%= render :partial => 'shared/flash_messages' %>

	<% if @posts.empty? %>
		<p>There are currently no posts.</p>
	<% else %>
		<%= render :partial => 'post', :collection => @posts %>
	<% end %>
	
	<%= will_paginate %>
</div>
