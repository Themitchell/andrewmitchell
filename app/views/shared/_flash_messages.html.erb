<% if flash[:error] %>
  <a id="error" name="error" href="#error" class="flash_message">
    <%= flash[:error] %>
  </a>
<% elsif flash[:alert] %>
  <a id="error" name="error" href="#error" class="flash_message">
    <%= flash[:alert] %>
  </a>
<% elsif flash[:notice] %>
  <a id="notice" name="notice" href="#notice" class="flash_message">
    <%= flash[:notice] %>
  </a>
<% end %>
