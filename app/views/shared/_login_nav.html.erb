<div id="login_nav">
		<% if user_signed_in? %>
		  <p>Signed in as <%= current_user.username %>.<br />
		 	Not you? <%= link_to "Sign out", destroy_user_session_path %></p>
			<p>To change your profile click <%= link_to 'here', edit_user_path(current_user) %></p>
	  <% else %>
	    <p><%= link_to "Sign up", new_user_registration_path %> or
	    <%= link_to "Sign in", new_user_session_path %></p>
	  <% end %>
</div>