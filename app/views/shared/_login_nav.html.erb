<div id="login_nav">
	<% if user_signed_in? %>
	  <p>Logged in as <%= current_user.username %>.<br />
	 	Not you? <%= link_to "Logout", destroy_user_session_path %></p>
		<p>To change your profile click <%= link_to 'here', edit_user_path(current_user) %></p>
  <% else %>
    <p><%= link_to "Register", new_user_registration_path %> or
    <%= link_to "Login", new_user_session_path %></p>
  <% end %>
</div>