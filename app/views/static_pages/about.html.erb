<div id="about_page">
	<h1>About</h1>

  <% if @personal_statement && @personal_statement.body.present? %>
    <section id="personal_statement">
    	<%= @personal_statement.body.html_safe %>
    </section>
  <% end %>
  
  <% if @employment_history.any? %>
    <section id="employment_history">
      <h2>Employment History</h2>
      <ol id="employment_history">
        <%= render :partial => "employment_history_item", :collection => @employment_history %>
      </ol>
    </section>
  <% end %>
  
  <% if @educational_qualifications.any? %>
    <section id="educational_qualifications">
      <h2>Educational Qualifications</h2>
      <ol id="eduactional_qualifications">
        <%= render :partial => "educational_qualification", :collection => @educational_qualifications %>]
      </ol>
    </section>
  <% end %>
</div>
