<div id="new_post admin">
	<div class="title_block clearfix">
		<h1>New Post</h1>
		<%= link_to 'Back to Posts', admin_posts_path, :class => 'back_link' %>
	</div>

	<%= render :partial => 'shared/flash_messages' %>

	<%= form_for [@commentable, @comment] do |form| %>  
	  <ol class="formList">  
	    <div class="row">  
	      <%= form.label :body, "Comment:" %>  
	      <%= form.text_area :body, :rows => 3 %>  
	    </div>  
	    <div class="row">
				<%= submit_tag "Save" %>
			</div>  
	  </ol>  
	<% end %>
</div>