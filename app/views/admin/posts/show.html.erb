<%= bootstrap_page_header :h1 do %>
  Posts Admin
  <%= bootstrap_sub_header do %>
    <%= link_to "Back", :back %>
  <% end %>
<% end %>

<ol>
  <li>
    <strong>Id:</strong>
    <%= @post.id %>
  </li>
  <li>
    <strong>Author:</strong>
    <%= @post.author.username %>
  </li>
  <li>
    <strong>Created at:</strong>
    <%= @post.created_at %>
  </li>
  <li>
    <strong>Updated at:</strong>
    <%= @post.updated_at %>
  </li>
  <li>
    <strong>Permalink:</strong>
    <%= @post.permalink %>
  </li>
  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>
  <li>
    <strong>Body:</strong>
    <%= @post.body %>
  </li>
  <li>
    <strong>Published on:</strong>
    <%= published_on_text(@post) %>
  </li>
  <li>
    <strong>Category:</strong>
    <%= @post.category.display_name %>
  </li>
</ol>
