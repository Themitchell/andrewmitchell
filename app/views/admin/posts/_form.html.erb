<%= form_for [:admin, @post], :html => { :class => "form-vertical" } do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.label :published_on %>
  <%= f.text_field :published_on %>



  <%= f.label :category_id %>
  <%= f.select :category_id, options_from_collection_for_select(@categories, 'id', 'display_name') %>


  <%= f.submit "Save" %>
<% end %>
