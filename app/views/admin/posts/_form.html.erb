<%= form_for [:admin, @post], :html => { :class => "form-vertical" } do |f| %>
          
    <%= f.label :title %>
    <%= f.text_field :title %>
      
    <%= f.label :body %>
    <%= f.text_field :body %>
      
    <%= f.label :author_id %>
    <%= f.text_field :author_id %>
      
    <%= f.label :published_on %>
    <%= f.text_field :published_on %>
                  
    <%= f.label :category_id %>
    <%= f.text_field :category_id %>
    <%= f.submit "Save" %>
<% end %>