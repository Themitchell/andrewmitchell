<tr>
  <td><%= post_mini.id %></td>
  <td><%= post_mini.author.username %></td>
  <td><%= post_mini.title %></td>
  <td><%= published_on_text(post_mini) %></td>
  <td><%= post_mini.category.display_name %></td>
  <td><%= link_to "Show", admin_post_path(post_mini) %></td>
